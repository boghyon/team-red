<mvc:View controllerName="demo.controller.Master"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  core:require="{
    calculateState: 'demo/model/calculateState',
    getStatusConditionState: 'demo/model/getStatusConditionState'
  }">
  <f:DynamicPage fitContent="true" backgroundDesign="List" headerExpanded="false">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="&lt;trainer>'s Team" wrappingType="Hyphenated" wrapping="true" />
        </f:heading>
        <f:actions>
          <RatingIndicator id="pokeSize"
            maxValue="6"
            iconSize="1.375rem"
            editable="false"
            displayOnly="true"
            visualMode="Full"
            iconSelected="https://cdn.glitch.com/96886cc6-313e-4a24-b86e-7c54ec6fdb9c%2Fpokeball1.gif"
            iconUnselected="https://cdn.glitch.com/96886cc6-313e-4a24-b86e-7c54ec6fdb9c%2Fpokeball1%20empty.png"
          />
        </f:actions>
      </f:DynamicPageTitle>
    </f:title>
    <f:header>
      <f:DynamicPageHeader>
        <Toolbar width="100%" style="Clear">
          <SearchField liveChange=".searchBy(${$parameters>/newValue})" />
          <Button icon="sap-icon://sort-ascending" tooltip="Sort by name" press=".sortBy('name')" />
        </Toolbar>
      </f:DynamicPageHeader>
    </f:header>
    <f:content>
      <List id="masterList"
        width="auto"
        class="sapFDynamicPageAlignContent"
        mode="SingleSelectMaster"
        itemPress=".navToDetail">
        <ObjectListItem icon="{picTiny}"
          title="&lt;name>"
          number="&lt;HP> / &lt;HP Max>"
          numberUnit="HP"
          type="Active">
          <ObjectAttribute text="&lt;Level>" title="Lv."/>
        </ObjectListItem>
      </List>
    </f:content>
  </f:DynamicPage>
</mvc:View>