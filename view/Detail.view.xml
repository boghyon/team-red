<mvc:View controllerName="demo.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:uxap="sap.uxap"
  xmlns:layout="sap.ui.layout"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:core="sap.ui.core"
  core:require="{
    calculateState: 'demo/model/calculateState',
    getColorScheme: 'demo/model/getColorScheme'
  }">
  <uxap:ObjectPageLayout showTitleInHeaderContent="false">
    <uxap:headerTitle>
      <uxap:ObjectPageHeader
        objectImageURI="https://cdn.glitch.com/96886cc6-313e-4a24-b86e-7c54ec6fdb9c%2Fpokeball1.gif"
        objectTitle="&lt;name>"
        objectSubtitle="&lt;intro>"
        isObjectSubtitleAlwaysVisible="false" />
    </uxap:headerTitle>
    <uxap:headerContent>
      <Avatar src="https://cdn.glitch.com/96886cc6-313e-4a24-b86e-7c54ec6fdb9c%2Fpokeball1.gif"
        displaySize="XL"
        displayShape="Square"
        class="sapUiMediumMarginEnd">
      </Avatar>
      <layout:VerticalLayout width="10rem">
        <ObjectNumber number="#&lt;number>" />
        <Text text="&lt;description>" wrappingType="Hyphenated" />
      </layout:VerticalLayout>
      <layout:VerticalLayout width="13rem">
        <ObjectAttribute title="Height" text="&lt;Height> m" />
        <ObjectAttribute title="Weight" text="&lt;Weight> kg" />
        <ObjectStatus title="Abilities" text="&lt;Abilities>" />
      </layout:VerticalLayout>
      <layout:VerticalLayout>
        <ProgressIndicator
          percentValue="0"
          showValue="true"
          height="1.375rem"
          displayOnly="true"
        />
      </layout:VerticalLayout>
    </uxap:headerContent>
    <uxap:sections>
      <uxap:ObjectPageSection titleUppercase="false" title="Moves">
        <uxap:ObjectPageSubSection>
          <Table
            sticky="ColumnHeaders"
            growing="true"
            class="sapUxAPObjectPageSubSectionAlignContent"
            width="auto"
            contextualWidth="Auto"
            popinLayout="GridSmall"
          >
            <columns>
              <Column>
                <Text text="Move Name" />
              </Column>
              <Column width="4rem" hAlign="End">
                <Text text="PP" />
              </Column>
              <Column width="4rem"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline"
                hAlign="End">
                <Text text="Power" />
              </Column>
              <Column width="6rem"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline">
                <Text text="Type" />
              </Column>
            </columns>
            <ColumnListItem vAlign="Middle">
              <ObjectIdentifier title="&lt;moveName>" text="&lt;description>"/>
              <ObjectNumber number="&lt;pp>" emphasized="false" state="Information" />
              <ObjectNumber number="&lt;power>" />
              <tnt:InfoLabel
                text="&lt;moveType>"
                displayOnly="true"
              />
            </ColumnListItem>
          </Table>
        </uxap:ObjectPageSubSection>
      </uxap:ObjectPageSection>
    </uxap:sections>
  </uxap:ObjectPageLayout>
</mvc:View>