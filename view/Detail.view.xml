<mvc:View controllerName="demo.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:uxap="sap.uxap"
  xmlns:layout="sap.ui.layout"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:core="sap.ui.core"
  core:require="{
    calculateState: 'demo/model/calculateState',
    getColorScheme: 'demo/model/getColorScheme'
  }">
  <uxap:ObjectPageLayout showTitleInHeaderContent="false">
    <uxap:headerTitle>
      <uxap:ObjectPageHeader
        objectImageURI="{pic}"
        objectTitle="{name}"
        objectSubtitle="{intro}"
        isObjectSubtitleAlwaysVisible="false" />
    </uxap:headerTitle>
    <uxap:headerContent>
      <Avatar src="{pic}"
        displaySize="XL"
        displayShape="Square"
        class="sapUiMediumMarginEnd">
        <detailBox>
          <LightBox>
            <LightBoxItem imageSrc="{pic}" />
          </LightBox>
        </detailBox>
      </Avatar>
      <layout:VerticalLayout width="10rem">
        <ObjectNumber number="#{number}" />
        <Text text="{description}" wrappingType="Hyphenated" />
      </layout:VerticalLayout>
      <layout:VerticalLayout width="13rem">
        <ObjectAttribute title="Height" text="{Height} m" />
        <ObjectAttribute title="Weight" text="{Weight} kg" />
        <ObjectStatus title="Abilities" text="{Abilities}" state="Information" />
      </layout:VerticalLayout>
      <layout:VerticalLayout>
        <ProgressIndicator
          percentValue="{= ${hp} / ${hpMax} * 100}"
          showValue="true"
          height="1.375rem"
          state="{
            parts: [ 'hp', 'hpMax' ],
            formatter: 'calculateState'
          }"
          displayOnly="true"
          displayValue="{hp} of {hpMax} HP"
        />
        <layout:HorizontalLayout>
          <tnt:InfoLabel text="{types/0/}" class="sapUiTinyMarginEnd"
            colorScheme="{ path: 'types/0/', formatter: 'getColorScheme' }"/>
          <tnt:InfoLabel text="{types/1/}"
            colorScheme="{ path: 'types/1/', formatter: 'getColorScheme' }"
            visible="{= !!${types/1/}}" />
        </layout:HorizontalLayout>
      </layout:VerticalLayout>
    </uxap:headerContent>
    <uxap:sections>
      <uxap:ObjectPageSection titleUppercase="false" title="Moves">
        <uxap:ObjectPageSubSection>
          <Table
            sticky="ColumnHeaders"
            growing="true"
            class="sapUxAPObjectPageSubSectionAlignContent"
            width="auto"
            contextualWidth="Auto"
            popinLayout="GridSmall"
            items="{moves}">
            <columns>
              <Column>
                <Text text="Move Name" />
              </Column>
              <Column width="4rem" hAlign="End">
                <Text text="PP" />
              </Column>
              <Column width="4rem"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline"
                hAlign="End">
                <Text text="Power" />
              </Column>
              <Column width="6rem"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline">
                <Text text="Type" />
              </Column>
            </columns>
            <ColumnListItem vAlign="Middle">
              <ObjectIdentifier title="{moveName}" text="{description}"/>
              <ObjectNumber number="{pp}" emphasized="false" state="Information" />
              <ObjectNumber number="{:= ${power} || 'â€”' }" />
              <tnt:InfoLabel
                colorScheme="{ path: 'moveType', formatter: 'getColorScheme' }"
                text="{moveType}"
                displayOnly="true"
              />
            </ColumnListItem>
          </Table>
        </uxap:ObjectPageSubSection>
      </uxap:ObjectPageSection>
    </uxap:sections>
  </uxap:ObjectPageLayout>
</mvc:View>